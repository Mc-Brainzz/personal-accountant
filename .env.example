# Environment Variables for Personal Accountant
# Copy this file to .env and fill in your actual values

# =============================================================================
# CLOUDINARY - Image Enhancement Service
# =============================================================================
# Get these from: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# =============================================================================
# MINDEE - Structured OCR Service
# =============================================================================
# Get this from: https://platform.mindee.com/
MINDEE_API_KEY=your_mindee_api_key

# =============================================================================
# GOOGLE SHEETS - Data Storage
# =============================================================================
# Path to your Google Cloud service account JSON file
GOOGLE_SHEETS_CREDENTIALS_PATH=credentials/google_service_account.json
# The ID from your Google Sheets URL (the long string in the URL)
GOOGLE_SHEETS_SPREADSHEET_ID=your_spreadsheet_id

# =============================================================================
# GEMINI - LLM for AI Orchestration
# =============================================================================
# Get this from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
# Environment: development, staging, production
APP_ENVIRONMENT=development
# Enable detailed logging
DEBUG_MODE=true
# Maximum file size for uploads (in MB)
MAX_UPLOAD_SIZE_MB=10
# Supported image formats
SUPPORTED_IMAGE_FORMATS=jpg,jpeg,png,webp
